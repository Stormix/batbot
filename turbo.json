{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": [".env"],
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false
    },
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.local"],
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**"]
    },
    "typecheck": {
      "dependsOn": ["^check-types"]
    }
  }
}